<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.hackathon.picfix.PicFixImageView
            android:id="@+id/iv_sample_image_resize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/person" />

        <ImageView
            android:id="@+id/iv_scale_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_sample_image_resize"
            android:layout_toRightOf="@id/iv_sample_image_resize"
            android:contentDescription="@string/content_description"
            android:src="@drawable/img_scale_arrow_right"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_scale_arrow_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_sample_image_resize"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/content_description"
            android:src="@drawable/img_scale_arrow_bottom"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_scale_arrow_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_scale_arrow_bottom"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/content_description"
            android:src="@drawable/img_scale_arrow_top"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_scale_arrow_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_scale_arrow_right"
            android:layout_toStartOf="@+id/iv_scale_arrow_right"
            android:contentDescription="@string/content_description"
            android:src="@drawable/img_scale_arrow_left"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>
